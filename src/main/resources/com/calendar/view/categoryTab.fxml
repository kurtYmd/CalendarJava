<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.calendar.controllers.CategoryController"
            prefHeight="640.0" prefWidth="750.0">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
        <TableView fx:id="categoryTable" layoutX="14.0" layoutY="14.0" prefHeight="500.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="360" text="Name"/>
                <TableColumn fx:id="colorColumn" prefWidth="360" text="Color"/>
            </columns>
        </TableView>
        <ButtonBar layoutX="14.0" layoutY="520.0" prefHeight="40.0" prefWidth="720.0">
            <buttons>
                <Button fx:id="addCategoryButton" mnemonicParsing="false" text="Add Category"
                        onAction="#addCategoryAction">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="editCategoryButton" mnemonicParsing="false" text="Edit Category" onAction="#editCategoryAction">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="deleteCategoryButton" minWidth="0.0" mnemonicParsing="false" prefHeight="26.0" text="Delete Category" onAction="#deleteCategoryAction">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </buttons>
        </ButtonBar>
    </AnchorPane>
</AnchorPane>
